{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"checkJs": true,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"lib": ["esnext", "dom", "dom.iterable"],
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"strict": true,
		"target": "ES6",
		"module": "NodeNext",
		"moduleResolution": "NodeNext"
	},
	"include": ["src"]
}
